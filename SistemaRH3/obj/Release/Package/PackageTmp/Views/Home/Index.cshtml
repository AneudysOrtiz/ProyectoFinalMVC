@using SistemaRH3.DAL;


@{

    ViewBag.Title = "Inicio";
    GeneralContext db = new GeneralContext();
   
}

<script src="@Url.Content("~/content/js/jquery.js")"></script>

  <!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Inicio <small>Estadisticas generales</small>
        </h1>
        <ol class="breadcrumb">
            <li class="active">
                <i class="fa fa-dashboard"></i> Inicio
            </li>
        </ol>
    </div>
</div>
<!-- /.row -->


<div class="row">
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-archive fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">@db.Departamentos.Count()</div>
                        <div>Departamentos</div>
                    </div>
                </div>
            </div>
            <a href="@Url.Action("Index","Departamentos")">
                <div class="panel-footer">
                    <span class="pull-left">Ver detalles</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-green">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-user fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">@db.Empleados.Where(x => x.estado == "Activo").Count()</div>
                        <div>Empleados Activos</div>
                    </div>
                </div>
            </div>
            <a href="@Url.Action("Index", "Empleados")">
                <div class="panel-footer">
                    <span class="pull-left">Ver Detalles</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-yellow">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-sun-o fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">@db.Vacacioness.Where(x => x.estado == "Aprobada").Count()</div>
                        <div>Empleados Vacaciones</div>
                    </div>
                </div>
            </div>
            <a href="@Url.Action("Index", "Vacaciones")">
                <div class="panel-footer">
                    <span class="pull-left">Ver Detalles</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="panel panel-red">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-bell fa-5x"></i>
                    </div>
                    @{ string vacante = "Vacantes";}
                    <div class="col-xs-9 text-right">
                        <div class="huge">@db.Vacantes.Where(x => x.estadoVacante == "Activa").Count()</div>
                        @if(db.Vacantes.Where(x => x.estadoVacante == "Activa").Count() == 1) { vacante = "Vacante"; }
                        <div>@vacante</div>
                    </div>
                </div>
            </div>
            <a href="@Url.Action("Index", "Vacantes")">
                <div class="panel-footer">
                    <span class="pull-left">Ver Detalles</span>
                    <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                    <div class="clearfix"></div>
                </div>
            </a>
        </div>
    </div>
</div>
<!-- /.row -->


    <div class="row">
        
         @*@Html.Partial("~/Views/Empleados/RendimientoEmps.cshtml", db.Empleados.ToList())*@
        
         @Html.Partial("~/Views/Departamentos/ContadorDept.cshtml", db.Departamentos.ToList())

         
    
        @Html.Partial("~/Views/Empleados/Cumples.cshtml", db.Empleados.ToList())

        @Html.Partial("Historial", db.Historial.ToList())



</div>
<!-- /.row -->
           