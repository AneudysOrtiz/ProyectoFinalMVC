@model SistemaRH3.Models.IndexViewModel
@{
    
    SistemaRH3.DAL.GeneralContext db = new SistemaRH3.DAL.GeneralContext();
}



@Html.Partial("~/Views/Usuarios/MiCuenta.cshtml",db.Usuarios.ToList())

<div>
    
    <dl class="dl-horizontal">
        <dt>Contraseña:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Cambiar contraseña", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Crear", "SetPassword")
            }
            ]
        </dd>

        <dt>Mi Perfil:</dt>
        <dd>
            [
            
               <a href="@Url.Action("Editar", "Usuarios")">Editar Informacion</a>           
            ]
        </dd>
       
    </dl>
</div>



