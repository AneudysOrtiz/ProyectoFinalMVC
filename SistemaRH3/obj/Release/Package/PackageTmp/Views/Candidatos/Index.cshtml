@model IEnumerable<SistemaRH3.Models.Candidatos>

@{
    ViewBag.Title = "Index";
}

 <!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Candidatos <small>Reclutamiento</small>
        </h1>
        <ol class="breadcrumb">
            <li class="active">
                <a class="btn btn-sm btn-primary" href="@Url.Action("Create","Candidatos")">Agregar Candidato</a>
                <a class="btn btn-sm btn-warning" href="#">Buscar Candidato</a>
            </li>
        </ol>
    </div>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Vacante.VacanteID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.apellido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.telefono)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fechaAp)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Vacante.VacanteID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.apellido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.telefono)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fechaAp)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CandidatoID }) |
            @Html.ActionLink("Details", "Details", new { id=item.CandidatoID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CandidatoID })
        </td>
    </tr>
}

</table>
