@model SistemaRH3.Models.Correos

@using (Html.BeginForm("CorreoSimple", "Correos"))
            {
    <div class="modal-body">
        <div class="form-horizontal">
            <div class="form-group">
                <div class="col-md-10">
                    <label class="control-label">Asunto</label>
                    <input required type="text" name="asunto" id="asunto" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4">
                    <label class="control-label">Destinatario</label>
                    @Html.DropDownList("EmpleadoID", null, htmlAttributes: new { @class = "form-control" })

                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <label required class="control-label">Mensaje</label>
                    <textarea name="mensaje" id="mensaje"></textarea>
                    <script>
                                    CKEDITOR.replace("mensaje");
                    </script>

                </div>
            </div>
            <div class="form-group">
                <div class="col-md-4">
                    <label>Accion</label>

                    <select name="accion" class="form-control">
                        <option value="Enviar">Enviar</option>
                        <option value="Archivar">Archivar</option>
                    </select>


                </div>
            </div>
        </div>
    </div>
                <div class="modal-footer">
                    <button type="submit" id="btnSave" class="btn btn-primary">Enviar</button>
                    <button type="button" id="btnClose" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                </div>
}