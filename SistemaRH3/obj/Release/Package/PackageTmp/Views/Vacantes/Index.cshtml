@model IEnumerable<SistemaRH3.Models.Vacantes>

@{
    ViewBag.Title = "Index";
}

 <!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Vacantes <small>Resumen</small>
        </h1>
        <ol class="breadcrumb">
            <li class="active">
                <a class="btn btn-sm btn-primary" href="@Url.Action("Create","Vacantes")">Registrar Vacante</a>
                <a class="btn btn-sm btn-warning" href="#">Buscar Vacante</a>
            </li>
        </ol>
    </div>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Departamentos.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cantidad)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Departamentos.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cantidad)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.VacanteID }) |
            @Html.ActionLink("Details", "Details", new { id=item.VacanteID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.VacanteID })
        </td>
    </tr>
}

</table>
