@model SistemaRH3.Models.Empleados

@{
    ViewBag.Title = "Detalles";
}

@*<style>
    #wrapper{background: url(https://www.toptal.com/designers/subtlepatterns/patterns/tileable_wood_texture.png);}

</style>*@


<!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Detalles <small>Empleados</small>
        </h1>
        <ol class="breadcrumb">
            <li class="active">
                <a class="btn btn-sm btn-default"
                   href="@Url.Action("Index", "Empleados")">
                    <span class="glyphicon glyphicon-arrow-left"></span> Volver
                </a>

                <a class="btn btn-sm btn-warning"
                   href="@Url.Action("Editar", "Empleados", new { id=Model.EmpleadoID})">
                    <span class="glyphicon glyphicon-pencil"></span> Editar
                </a>

                <a class="btn btn-sm btn-success"
                   href="#"><span class="glyphicon glyphicon-print"></span> Exportar PDF</a>
            </li>
        </ol>
    </div>
</div>

<div class="row" >
    <div class="col-md-3">
        <img style="margin-left:20px"class="img-circle img-responsive img-center" src="http://placehold.it/200x200"/>
    </div>

    <div class="col-md-6">   
        <div class="well">
            <h2>@Html.DisplayFor(model => model.nombre) @Html.DisplayFor(model => model.apellido)
                <small>@Html.DisplayFor(model => model.puesto) de @Html.DisplayFor(model => model.Departamentos.nombre)</small>

            </h2>
            <ul style="list-style-type:none">
                <li><span class="glyphicon glyphicon-envelope"></span> @Html.DisplayFor(model => model.email)</li>
                <li><span class="glyphicon glyphicon-earphone"></span> @Html.DisplayFor(model => model.telefono)</li>
                <li><span class="glyphicon glyphicon-home"></span> @Html.DisplayFor(model => model.direccion)</li>
            </ul>          
       </div>    
    </div>

</div>
<hr />
<div class="row">
    <div class="col-md-3 text-center">
        <h3>Informacion Personal</h3>
    </div>
    <div class="col-md-4">
        <dl class="dl-horizontal">
            <dt><strong>Cedula: </strong></dt>
            <dd>@Html.DisplayFor(model => model.cedula)</dd>

            <dt><strong>Fecha de Nacimiento: </strong></dt>
            <dd>@Html.DisplayFor(model => model.FechaNac)</dd>

            <dt><strong>Sexo: </strong></dt>
            <dd>@Html.DisplayFor(model => model.sexo)</dd>

            <dt><strong>Estado Civil: </strong></dt>
            <dd>@Html.DisplayFor(model => model.estadoCivil)</dd>
        </dl>
    </div>
</div>

<hr />

<div class="row">
    <div class="col-md-3 text-center">
        <h3>Informacion Academica</h3>
    </div>
    <div class="col-md-4">
        <dl class="dl-horizontal">
            <dt><strong>Nivel Alcanzado: </strong></dt>
            <dd>@Html.DisplayFor(model => model.nivelAlcanzado)</dd>

            <dt><strong>Titulo Obtenido: </strong></dt>
            <dd>@Html.DisplayFor(model=>model.titulo)</dd>
                       

            <dt><strong>Estudios Completados: </strong></dt>
            <dd>@Html.DisplayFor(model=>model.estudios)</dd>
        </dl>
    </div>
</div>

<hr />

<div class="row">
    <div class="col-md-3 text-center">
        <h3>Informacion Laboral</h3>
    </div>
    <div class="col-md-4">
        <dl class="dl-horizontal">
            <dt><strong>Departamento: </strong></dt>
            <dd>@Html.DisplayFor(model => model.Departamentos.nombre)</dd>

            <dt><strong>Puesto: </strong></dt>
            <dd>@Html.DisplayFor(model => model.puesto)</dd>

            <dt><strong>Salario: </strong></dt>
            <dd>@Html.DisplayFor(model => model.salario)</dd>
        </dl>
    </div>
</div>


