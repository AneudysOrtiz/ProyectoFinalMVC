@model IEnumerable<SistemaRH3.Models.Historial>

<div class="col-lg-4">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title"><i class="fa fa-clock-o fa-fw"></i> Historial de cambios</h3>
        </div>
        <div class="panel-body">
            <div class="list-group">
                @foreach (var item in Model.OrderByDescending(m=>m.fecha).Take(6))
                {
                    string icon = "";
                    switch (item.elemento)
                    {
                        case "empleado":
                            icon = "user";
                            break;

                        case "departamento":
                            icon = "archive";
                            break;

                        case "vacaciones":
                            icon = "sun-o";
                            break;

                        case "vacantes":
                            icon = "bell";
                            break;

                        case "correos":
                            icon = "envelope";
                            break;
                    }
                    <p  class="list-group-item">
                        <span class="badge">@item.fecha</span>
                        <i class="fa fa-fw fa-@icon"></i> @item.descripcion @item.elementoNombre
                        @item.elementoApellido
                    </p>
                }
            </div>
            <div class="text-right">
                <a href="@Url.Action("Index", "Historial")">Ver todo el historial <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div>
    </div>
</div>

