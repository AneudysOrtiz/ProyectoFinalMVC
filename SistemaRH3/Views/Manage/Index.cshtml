@model SistemaRH3.Models.IndexViewModel
@{
    ViewBag.Title = "Mi Cuenta";
}

  <!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Mi cuenta <small>Configuracion</small>
        </h1>
        <ol class="breadcrumb">
            <li class="active">
                <i class="fa fa-dashboard"></i> Inicio / Mi Cuenta
            </li>
        </ol>
    </div>
</div>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    
    <dl class="dl-horizontal">
        <dt>Contraseña:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Cambiar contraseña", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Crear", "SetPassword")
            }
            ]
        </dd>
       
    </dl>
</div>
