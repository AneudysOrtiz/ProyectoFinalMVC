@model IEnumerable<SistemaRH3.Models.Vacaciones>

@{
    ViewBag.Title = "Index";
}

 <!-- Page Heading -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Vacaciones <small>Resumen</small>
        </h1>
        <ol class="breadcrumb">
            <li class="active">
                <a class="btn btn-sm btn-primary" href="@Url.Action("Create","Vacaciones")">Solicitar Vacaciones</a>
                <a class="btn btn-sm btn-warning" href="#">Buscar Vacaciones</a>
            </li>
        </ol>
    </div>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Empleados.cedula)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fechaInicio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fechaFin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.estado)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Empleados.cedula)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fechaInicio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fechaFin)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.estado)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.VacacionesID }) |
            @Html.ActionLink("Details", "Details", new { id=item.VacacionesID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.VacacionesID })
        </td>
    </tr>
}

</table>
